{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-console": "error",
    "no-unused-vars": [
      "error",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "react-i18next",
            "message": "Please use next-i18next import instead to avoid hydration errors"
          }
        ]
      }
    ]
  }
}
